<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/cV_Corner"
        app:cardElevation="@dimen/cV_Elevation"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/cV_Padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/showName"
                    android:layout_weight="1"
                    android:textSize="@dimen/list_titleTextSize" />

                <TextView
                    android:id="@+id/tvSName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_stroke"
                    android:text="@string/tvName"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/list_itemMargins"
                    android:padding="@dimen/list_itemPaddings"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/showGenre"
                    android:layout_weight="1"
                    android:textSize="@dimen/list_titleTextSize" />

                <TextView
                    android:id="@+id/tvSGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_stroke"
                    android:text="@string/tvGenre"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/list_itemMargins"
                    android:padding="@dimen/list_itemPaddings"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/isFinishedImage"
                android:layout_width="@dimen/list_finishedImageWidthSize"
                android:layout_height="@dimen/list_finishedImageHeightSize"
                android:layout_weight="1"
                app:srcCompat="@drawable/finished" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>